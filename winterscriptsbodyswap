-- Winter Scripts | Steal a Brainrot
-- Body Swap Potion GUI

local Players = game:GetService("Players")
local LP = Players.LocalPlayer
local PlayerGui = LP:WaitForChild("PlayerGui")

-- ScreenGui
local gui = Instance.new("ScreenGui")
gui.Name = "WinterScriptsGUI"
gui.ResetOnSpawn = false
gui.Parent = PlayerGui

-- Main Frame
local main = Instance.new("Frame")
main.Parent = gui
main.Size = UDim2.fromScale(0.32, 0.28)
main.Position = UDim2.fromScale(0.34, 0.36)
main.BackgroundColor3 = Color3.fromRGB(22,22,22)
main.BorderSizePixel = 0
main.Active = true
main.Draggable = true

Instance.new("UICorner", main).CornerRadius = UDim.new(0,16)

-- Title
local title = Instance.new("TextLabel")
title.Parent = main
title.Size = UDim2.new(1,0,0.25,0)
title.BackgroundTransparency = 1
title.Text = "Winter Scripts"
title.Font = Enum.Font.GothamBold
title.TextScaled = true
title.TextColor3 = Color3.fromRGB(255,255,255)

-- Button
local button = Instance.new("TextButton")
button.Parent = main
button.Size = UDim2.new(0.85,0,0.35,0)
button.Position = UDim2.new(0.075,0,0.45,0)
button.BackgroundColor3 = Color3.fromRGB(35,35,35)
button.Text = "Use Body Swap Potion"
button.Font = Enum.Font.GothamBold
button.TextScaled = true
button.TextColor3 = Color3.fromRGB(255,255,255)
button.AutoButtonColor = true

Instance.new("UICorner", button).CornerRadius = UDim.new(0,14)

-- Logic
local function usePotion()
    local char = LP.Character or LP.CharacterAdded:Wait()
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    if not humanoid then return end

    local tool =
        LP.Backpack:FindFirstChild("Body Swap Potion")
        or char:FindFirstChild("Body Swap Potion")

    if not tool then
        warn("Body Swap Potion not found")
        return
    end

    humanoid:EquipTool(tool)
    task.wait(0.15)

    if tool:FindFirstChild("Activate") or tool:IsA("Tool") then
        pcall(function()
            tool:Activate() -- simulates screen click / use
        end)
    end
end

button.MouseButton1Click:Connect(usePotion)
